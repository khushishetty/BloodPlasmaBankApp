<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEFEF"
    android:orientation="vertical"
    android:padding="25dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DA1919"
                android:padding="5dp"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="#F3E9E9"
                android:textSize="28dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/req_reg_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select a blood group" />

                    <Spinner
                        android:id="@+id/req_reg_bloodgrp_id"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request Type" />

                    <Spinner
                        android:id="@+id/spinner_type_id"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/req_reg_pass_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName|textPassword" />

            <CheckBox
                android:id="@+id/req_reg_urgent_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Urgently needed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DA1919"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Contact Details"
                android:textAlignment="textStart"
                android:textColor="#F3E9E9"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/req_reg_phno_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/req_reg_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/req_reg_address_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPostalAddress" />

            <Button
                android:id="@+id/req_reg_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_bg"
                android:text="REGISTER"
                android:textColor="#F3E9E9"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/req_log_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="ALREADY REGISTERED? CLICK HERE TO LOGIN"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

