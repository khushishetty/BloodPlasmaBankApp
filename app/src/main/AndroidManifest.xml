        <activity android:name=".RequestRegisterActivity" />
        <activity android:name=".RequestModifyActivity" />
        <activity android:name=".RequestLoginActivity" />
        <activity android:name=".RequestActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailedBloodDonorActivity" />
        <activity android:name=".DisplayPlasmaDonorActivity" />
        <activity android:name=".DisplayBloodDonorsActivity" />
        <activity android:name=".MainActivity" />
    </application>



</manifest>